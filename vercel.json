{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/server.js"
    },
    {
      "source": "/_next/:path*",
      "destination": "/frontend/_next/:path*"
    },
    {
      "source": "/(static|favicon.ico|images)/:path*",
      "destination": "/frontend/public/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/$1"
    }
  ],
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ]
}
